{
    // Point CMake Tools to the workspace root (multi-package colcon workspace)
    "cmake.sourceDirectory": "${workspaceFolder}",
    // Use compile_commands.json for ALL include paths/defines; avoid manual duplication.
    "C_Cpp.default.compileCommands": "${workspaceFolder}/compile_commands.json",
    // Minimal fallback includePath only if a TU is missing from compile commands (kept very small)
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/src/transformer_msp_bridge/include",
        "${workspaceFolder}/src/external/inav/src/main",
        "/opt/ros/jazzy/include"
    ],
    // Disable recursive globbing that can slow IntelliSense and cause accidental header picking
    "C_Cpp.exclusionPolicy": "checkFilesAndFolders",
    // Prefer compile commands over tag parsing fallback
    "C_Cpp.loggingLevel": "Warning",
    // Explicit compiler
    "C_Cpp.default.compilerPath": "/usr/bin/g++",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    // If using clangd extension, these arguments help (ignored by MS extension). Safe to keep.
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}",
        "--background-index",
        "--log=error"
    ],
    "C_Cpp.clang_format_fallbackStyle": "none",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_sortIncludes": true,
    "editor.formatOnSave": true,
    "C_Cpp.clang_format_fallbackStyle": "{ AllowShortBlocksOnASingleLine: Empty }",
    "clang-format.fallbackStyle": "none",
    "clang-format.style": "file",
    "files.trimTrailingWhitespace": false,
    "editor.formatOnType": false,
    "editor.formatOnSaveMode": "file",
    "files.associations": {
